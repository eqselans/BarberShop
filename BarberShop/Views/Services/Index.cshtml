@model IEnumerable<BarberShop.Models.Service>

@{
    ViewData["Title"] = "Sizmetlerimiz";
}
<h1>Hizmetlerimiz</h1>
<div class="row">
    @foreach (var service in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4">
                <img src="@service.ImageUrl" class="card-img-top" alt="@service.Name">
                <div class="card-body">
                    <h5 class="card-title">@service.Name</h5>
                    <p class="card-text">@service.Description</p>
                    <p><strong>Fiyat:</strong> @service.Price ₺</p>
                </div>
            </div>
        </div>
    }
</div>
