@model BarberShop.Models.Employee

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Yeni Çalışan Ekle";
}

<h2>Yeni Çalışan Ekle</h2>

<form asp-action="AddEmployee" method="post">
    <div class="form-group">
        <label>Ad Soyad:</label>
        <input type="text" asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Uzmanlık:</label>
        <input type="text" asp-for="Specialization" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Uygunluk Saatleri:</label>
        <textarea asp-for="Availability" class="form-control" required></textarea>
    </div>
    <button type="submit" class="btn btn-success">Kaydet</button>
    <a href="@Url.Action("ManageEmployees", "Admin")" class="btn btn-secondary">İptal</a>
</form>
