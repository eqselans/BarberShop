@model BarberShop.Models.Appointment

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Randevu Düzenle";
}

<h2>Randevu Düzenle</h2>

<form asp-action="EditAppointment" asp-controller="Appointments" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Müşteri Adı:</label>
        <input type="text" asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Hizmet:</label>
        <input type="text" asp-for="Service.Name" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label>Çalışan:</label>
        <input type="text" asp-for="Employee.Name" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label>Tarih:</label>
        <input type="datetime-local" asp-for="AppointmentDate" class="form-control" />
    </div>
    <div class="form-group">
        <label>Durum:</label>
        <select asp-for="IsConfirmed" class="form-control">
            <option value="true">Onaylandı</option>
            <option value="false">Bekliyor</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Kaydet</button>
    <a href="@Url.Action("ManageAppointments", "Admin")" class="btn btn-secondary">İptal</a>
</form>
