@model IEnumerable<BarberShop.Models.Service>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Hizmet Yönetimi";
}

<h2>Hizmet Yönetimi</h2>
<a href="@Url.Action("AddService", "Admin")" class="btn btn-success mb-3">Yeni Hizmet Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Açıklama</th>
            <th>Süre</th>
            <th>Fiyat</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.Name</td>
                <td>@service.Description</td>
                <td>@service.DurationInMinutes dakika</td>
                <td>@service.Price ₺</td>
                <td>
                    <a href="@Url.Action("EditService", "Admin", new { id = service.Id })" class="btn btn-primary btn-sm">Düzenle</a>
                    <a href="@Url.Action("DeleteService", "Admin", new { id = service.Id })" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
