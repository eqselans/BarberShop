@model IEnumerable<BarberShop.Models.Testimonial>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Yorum Yönetimi";
}


<h2>Yorum Yönetimi</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Kullanıcı Adı</th>
            <th>Yorum</th>
            <th>Oluşturulma Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var testimonial in Model)
        {
            <tr>
                <td>@testimonial.UserName</td>
                <td>@testimonial.Text</td>
                <td>@testimonial.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    <a href="@Url.Action("EditTestimonial", "Admin", new { id = testimonial.Id })" class="btn btn-primary btn-sm">Düzenle</a>
                    <a href="@Url.Action("DeleteTestimonial", "Admin", new { id = testimonial.Id })" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
