@model BarberShop.ViewModels.AppointmentViewModel

@{
    ViewData["Title"] = "Yeni Randevu Al";
}
<h1>Yeni Randevu Al</h1>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="ServiceId">Hizmet</label>
        <select asp-for="ServiceId" class="form-control">
            <option value="1">Geleneksel Kesim</option>
            <option value="2">Bıyık Kesimi</option>
            <option value="3">Sakal Kesimi</option>
        </select>
    </div>
    <div class="form-group">
        <label for="EmployeeId">Çalışan</label>
        <select asp-for="EmployeeId" class="form-control">
            <option value="1">Ahmet Yılmaz</option>
            <option value="2">Mehmet Kaya</option>
        </select>
    </div>
    <div class="form-group">
        <label for="AppointmentDate">Tarih ve Saat</label>
        <input asp-for="AppointmentDate" type="datetime-local" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
