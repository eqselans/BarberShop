@model BarberShop.Models.Appointment

<form method="post">
    <div class="form-group">
        <label for="ServiceId">Hizmet:</label>
        <select id="ServiceId" name="ServiceId" class="form-control">
            @foreach (var service in ViewBag.Services)
            {
                <option value="@service.Id">@service.Name (@service.Price.ToString("C"))</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="CustomerName">Adınız:</label>
        <input type="text" id="CustomerName" name="CustomerName" class="form-control" />
    </div>
    <div class="form-group">
        <label for="AppointmentDate">Randevu Tarihi:</label>
        <input type="datetime-local" id="AppointmentDate" name="AppointmentDate" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Randevu Al</button>
</form>
