@model BarberShop.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Kayýt Ol";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Kayýt Ol</h2>

    <form asp-action="Register" method="post" class="p-4 border rounded shadow-sm bg-light">
        <!-- Genel Hata Mesajlarý -->
        <div class="text-danger">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>

        <!-- Ad ve Soyad -->
        <div class="form-group">
            <label for="fullName" class="form-label">Ad ve Soyad:</label>
            <input type="text" name="FullName" id="fullName" class="form-control" placeholder="Ad ve soyadýnýzý girin" required />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <!-- Email -->
        <div class="form-group mt-3">
            <label for="email" class="form-label">Email:</label>
            <input type="email" name="Email" id="email" class="form-control" placeholder="Email adresinizi girin" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <!-- Þifre -->
        <div class="form-group mt-3">
            <label for="password" class="form-label">Þifre:</label>
            <input type="password" name="Password" id="password" class="form-control" placeholder="Þifrenizi girin" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <!-- Þifre Doðrulama -->
        <div class="form-group mt-3">
            <label for="confirmPassword" class="form-label">Þifreyi Doðrula:</label>
            <input type="password" name="ConfirmPassword" id="confirmPassword" class="form-control" placeholder="Þifrenizi tekrar girin" required />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <!-- Telefon Numarasý -->
        <div class="form-group mt-3">
            <label for="phoneNumber" class="form-label">Telefon Numarasý:</label>
            <input type="tel" name="PhoneNumber" id="phoneNumber" class="form-control" placeholder="Telefon numaranýzý girin" required />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <!-- Gönder Butonu -->
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary btn-lg w-100">Kayýt Ol</button>
        </div>
    </form>
</div>
