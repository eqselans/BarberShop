@model BarberShop.Models.Testimonial

<div class="container mt-5">
    <h1 class="text-center mb-4">Yorum Ekle</h1>

    <form asp-action="Create" method="post" class="p-4 border rounded shadow-sm bg-light">
        <!-- Kullanıcı Adı (Gizli) -->
        <input type="hidden" asp-for="UserName" />

        <!-- Yorum Alanı -->
        <div class="form-group mt-3">
            <label for="Text" class="form-label">Yorum:</label>
            <textarea id="Text" name="Text" asp-for="Text" class="form-control" rows="5" placeholder="Yorumunuzu yazın" required></textarea>
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>

        <!-- Gönderme Düğmesi -->
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary btn-lg">Gönder</button>
        </div>
    </form>
</div>
